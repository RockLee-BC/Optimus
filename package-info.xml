<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Bugo:Optimus</id>
	<name>Optimus</name>
	<version>2.0 beta [11/18/18]</version>
	<type>modification</type>

	<install for="SMF 2.1 Beta 4, 2.1 - 2.1.99">
		<readme parsebbc="true">readme/readme.txt</readme>
		<readme parsebbc="true" lang="russian">readme/russian.txt</readme>
		<hook hook="integrate_pre_load" function="Optimus::hooks" file="$sourcedir/Class-Optimus.php" />
		<require-dir name="Sources" destination="$boarddir">Core files</require-dir>
		<require-dir name="Themes" destination="$boarddir">Template &amp; Language files</require-dir>
		<database>settings.php</database>
		<redirect url="?action=admin;area=optimus" timeout="1000" />
	</install>

	<uninstall for="SMF 2.1 Beta 4, 2.1 - 2.1.99">
		<hook hook="integrate_pre_load" function="Optimus::hooks" file="$sourcedir/Class-Optimus.php" reverse="true" />
		<code>uninstall.php</code>
		<remove-file name="$themedir/Optimus.template.php" />
		<remove-file name="$sourcedir/Class-Optimus.php" />
		<remove-file name="$sourcedir/Class-OptimusAdmin.php" />
		<remove-file name="$sourcedir/Class-OptimusSitemap.php" />
		<remove-file name="$themedir/images/optimus.png" />
		<remove-file name="$themedir/images/optimus_large.png" />
		<remove-file name="$themedir/css/optimus.css" />
		<remove-dir name="$languagedir/Optimus" />
		<redirect url="?action=admin;area=packages;sa=browse" timeout="1000" />
	</uninstall>

</package-info>